<RelativeLayout android:id="@+id/RelativeLayout00" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:background="#FFFFFF"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:id="@+id/titleBar">
		<RelativeLayout android:id="@+id/RelativeLayout01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextView android:layout_width="fill_parent" 
					android:id="@+id/title" 
					android:text="@string/hello" 
					android:layout_height="wrap_content" 
					android:textColor="#000000">
				</TextView>
				
				<TextView android:layout_width="fill_parent" 
					android:gravity="right" 
					android:id="@+id/status" 
					android:text="@string/status" 
					android:layout_height="wrap_content" 
					android:textColor="#000000">
				</TextView>
				<ImageView android:id="@+id/statusIcon" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content">
				</ImageView>
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:id="@+id/optionSelectionLayout"
		android:layout_below="@+id/titleBar">
		<LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/linearLayout2" android:orientation="vertical">
			<ImageView android:layout_width="wrap_content" android:id="@+id/imageView1" android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_gravity="left"></ImageView>
			<TextView android:id="@+id/kitchen_coffeeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Coffee" android:textColor="#000000" android:layout_gravity="center"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/linearLayout3" android:orientation="vertical">
			<ImageView android:layout_width="wrap_content" android:id="@+id/imageView2" android:src="@drawable/icon" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"></ImageView>
			<TextView android:id="@+id/kitchen_stoveLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stove" android:textColor="#000000" android:layout_gravity="center"></TextView>
		</LinearLayout>
		
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:layout_below="@+id/optionSelectionLayout" 
		android:id="@+id/setTimeLayout" 
		android:orientation="vertical">
		<TimePicker android:layout_width="wrap_content" android:id="@+id/timePicker1" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"></TimePicker>
		<TextView android:textColor="#000000" android:id="@+id/kitchen_setStartTimeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Time" android:layout_gravity="center|center_vertical" android:textSize="50px"></TextView>
	</LinearLayout>
	<RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:layout_below="@+id/setTimeLayout" android:gravity="center|center_horizontal" android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/setOnLayout" android:layout_height="wrap_content" android:layout_alignLeft="@+id/setAutoOnLayout" android:layout_alignRight="@+id/setAutoOnLayout" android:layout_width="fill_parent">
			<TextView android:text="Power" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="50px" android:layout_gravity="center_vertical|left"></TextView>
			<ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ToggleButton" android:id="@+id/kitchen_coffePower" android:layout_gravity="right"></ToggleButton>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/setAutoOnLayout" android:layout_below="@+id/setOnLayout">
			<TextView android:text="Auto Brew" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="50px" android:textColor="#000000" android:layout_gravity="center_vertical"></TextView>
			<ToggleButton android:text="ToggleButton" android:id="@+id/toggleButton2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10px"></ToggleButton>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
